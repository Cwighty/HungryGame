@page "/"
@inject GameInfo gameInfo

<PageTitle>Hungry Hippos</PageTitle>

<h1>Play Hungry Hippos</h1>
@if (!gameInfo.IsGameStarted)
{
    <StartGame OnGameStarted=@GameStartedHandler />
}
else
{
    <Board CellIcon=@cellIcon />
}
<PlayerList />

@code
{
    private string cellIcon;
    private void GameStartedHandler(string cellIcon)
    {
        this.cellIcon = cellIcon;
        StateHasChanged();
    }
}
